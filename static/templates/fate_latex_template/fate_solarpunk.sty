% Create the heading for a list of skills at a given rank
\newcommand{\skill}[1]
{
  \IfEqCase{#1}{
        {8}{\textbf{Legendary (+8): }}
        {7}{\textbf{Epic (+7): }}
        {6}{\textbf{Fantastic (+6): }}
        {5}{\textbf{Superb (+5): }}
        {4}{\textbf{Great (+4): }}
        {3}{\textbf{Good (+3): }}
        {2}{\textbf{Fair (+2): }}
        {1}{\textbf{Average (+1): }}
        {0}{\textbf{Mediocre (+0): }}
        {-1}{\textbf{Poor (-2): }}
        {-2}{\textbf{Terrible (-2): }}
    }[\PackageError{tree}{Undefined option to skill: #1}{}]%
}

\newcommand{\consequence}[1]
{
  \IfEqCase{#1}{
        {2}{\stress{2} Mild: }
        {4}{\stress{4} Moderate: }
        {6}{\stress{6} Major: }
  }[\PackageError{tree}{Undefined option to consequence: #1}{}]%
}

\newcommand{\stunt}[2]
{
